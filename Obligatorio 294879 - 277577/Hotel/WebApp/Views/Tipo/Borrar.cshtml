@model LogicaNegocio.Entidades.Tipo

@{
    ViewData["Title"] = "Borrar";
}
@if (ViewBag.Success != null)
{
    <div class="text-center text-lg-start mt-4 pt-2">
        <div class="alert alert-success">@ViewBag.Success</div>
    </div>
}

<h1>Borrar</h1>



<div>
    
    @if (Model.Nombre != null)
    {
    <h3>Are you sure you want to delete this?</h3>
    <h4>Tipo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CostoPorHuesped)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CostoPorHuesped)
        </dd>
    </dl>
    
    <form asp-action="Borrar">
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
        </form>
    }
    else
    {
        @if (ViewBag.Error != null)
        {
            <div class="text-center text-lg-start mt-4 pt-2">
                <div class="alert alert-danger">@ViewBag.Error</div>
            </div>
        }
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    }
</div>
