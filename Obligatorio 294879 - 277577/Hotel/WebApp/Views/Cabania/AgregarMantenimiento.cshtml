@model LogicaNegocio.Entidades.Mantenimiento

@{
    ViewData["Title"] = "AgregarMantenimiento";
}

@if (ViewBag.Error != null)
{
    <div class="text-center text-lg-start mt-4 pt-2">
        <div class="alert alert-danger">@ViewBag.Error</div>
    </div>
}
@if (ViewBag.Success != null)
{
    <div class="text-center text-lg-start mt-4 pt-2">
        <div class="alert alert-success">@ViewBag.Success</div>
    </div>
}


<h1>Agregar Mantenimiento</h1>
<hr />
<br />

<h4>Ingrese los siguientes datos: </h4>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarMantenimiento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input type="hidden" name="IdCabania" value="@ViewBag.IdCabania" />
            </div>
            
           
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costo" class="control-label"></label>
                <input asp-for="Costo" class="form-control" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreFuncionario" class="control-label"></label>
                <input asp-for="NombreFuncionario" class="form-control" />
                <span asp-validation-for="NombreFuncionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

