@model ViewModelCabania

@if (ViewBag.Error != null)
{
    <div class="text-center text-lg-start mt-4 pt-2">
        <div class="alert alert-danger">@ViewBag.Error</div>
    </div>
}




<h1>Alta Cabaña</h1>
<hr />
<br />
<h4>Ingrese los siguientes datos:</h4>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Tipo: </label>
                <select name="NombreTipo" class="form-control form-group">
                    @foreach (var item in ViewBag.Tipos)
                    {
                        <option value="@item.Nombre">@item.Nombre</option>
                    }
                </select>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre: </label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción: </label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="TieneJacuzzi" />
                <label class="form-check-label">Tiene Jacuzzi</label>
            </div>
            <br />

            <div class="form-group">
                <label class="control-label">Estado: </label>
                <select name="Estado" class="form-control">
                    <option value="true">Habilitado</option>
                    <option value="false">Deshabilitado</option>
                </select>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="MaxHuespedes" class="control-label">Máx. Huéspedes: </label>
                <input asp-for="MaxHuespedes" class="form-control" />
                <span asp-validation-for="MaxHuespedes" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Imagen" class="control-label">Imagen: </label>
                <input asp-for="Imagen" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
