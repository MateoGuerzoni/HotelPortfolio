<head>
    <link rel="stylesheet" href="~/css/campaign.css" />
</head>

@model AppCliente.Models.VMMantenimiento

@{
    ViewData["Title"] = "AgregarMantenimiento";
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<h1 class="primary-text">AgregarMantenimiento</h1>

<h4 class="secondary-text">VMMantenimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarMantenimiento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div>
                <input type="hidden" name="IdCabania" value="@ViewBag.IdCabania" />
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label secondary-text"></label>
                <input asp-for="Fecha" class="form-control form-input" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label secondary-text"></label>
                <input asp-for="Descripcion" class="form-control form-input" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costo" class="control-label secondary-text"></label>
                <input asp-for="Costo" class="form-control form-input" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreFuncionario" class="control-label secondary-text"></label>
                <input asp-for="NombreFuncionario" class="form-control form-input" />
                <span asp-validation-for="NombreFuncionario" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary secondary-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

