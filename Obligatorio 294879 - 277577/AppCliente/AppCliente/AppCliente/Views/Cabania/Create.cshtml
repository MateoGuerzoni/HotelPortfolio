<head>
    <link rel="stylesheet" href="~/css/campaign.css" />
</head>

@model AppCliente.Models.VMCabania

@{
    ViewData["Title"] = "Create";
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<h1 class="primary-text">Create</h1>

<h4 class="secondary-text">VMCabania</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*            <div class="form-group">
            <label asp-for="numHabitacion" class="control-label secondary-text"></label>
            <input asp-for="numHabitacion" class="form-control form-input" />
            <span asp-validation-for="numHabitacion" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Nombre" class="control-label secondary-text"></label>
                <input asp-for="Nombre" class="form-control form-input" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label secondary-text"></label>
                <input asp-for="Descripcion" class="form-control form-input" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label secondary-text">
                    <input class="form-check-input" asp-for="TieneJacuzzi" /> @Html.DisplayNameFor(model => model.TieneJacuzzi)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label secondary-text">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MaxHuespedes" class="control-label secondary-text"></label>
                <input asp-for="MaxHuespedes" class="form-control form-input" />
                <span asp-validation-for="MaxHuespedes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="NombreTipo" class="control-label secondary-text">Tipo</label>
                <select name="NombreTipo" class="form-control form-input">
                    @foreach (var item in ViewBag.Tipos)
                    {
                        <option value="@item.Nombre">@item.Nombre</option>
                    }
                </select>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary secondary-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
